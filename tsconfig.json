{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
    // ソースマップを有効化
    "sourceMap": true,
    // TSはECMAScript 5に変換
    "target": "ES5",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2015",
    // 厳密モードとして設定
    "strict": true,
		"jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
	"ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
